<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <style>
    </style>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NFL Statistics App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style="color: white;" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Teams", "Index", "Teams", new { area = "" }, new { @style = "color: white;" })</li>
                    <li>@Html.ActionLink("Players", "Index", "Players", new { area = "" }, new { @style = "color: white;" })</li>
                    <li>@Html.ActionLink("Stats", "Index", "Stats", new { area = "" }, new { @style = "color: white;" })</li>
                    <li>@Html.ActionLink("Schedule", "Index", "Schedule", new { area = "" }, new { @style = "color: white;" })</li>
                    @if (User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("User Administration", "Index", "Admin", new { area = "" }, new { @style = "color: white;" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - NFL Stats App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
